<div class="col-md-8 col-md-offset-2">
  <h2 class="text-center">Lessa 7an3adel el profile</h2>
	<div class="follow">
	  <% if User.is_friend(current_user, @user) && current_user.id != @user.id %>
	      <%= link_to "Unfriend", :controller => "friendables", :action => "unfriend", :id => @user.id, :class => "btn btn-danger" %>
	  <% elsif User.has_sent_request(current_user, @user) && current_user.id != @user.id %>
	      <%= link_to "Delete Friend Request", :controller => "friendables", :action => "unfriend", :id => @user.id, :class => "btn btn-danger" %>
	   <% elsif current_user.id != @user.id %>
	      <%= link_to "Send Friend Request", friend_request_friendable_path(@user), :class => "btn btn-default" %>
	  <% end %>
	</div>
	<%= link_to "Edit Profile", edit_user_registration_path(current_user), :class => "btn btn-default" %>
	<%= link_to "Friends",  friend_list_friendables_path, :class => "btn btn-default"%>
</div>