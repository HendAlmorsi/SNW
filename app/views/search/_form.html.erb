<div class = "row">
	<%= form_tag url_for(:controller=>"search", :action => "index"), :method => :get do %>
	  <%= text_field_tag :search, nil, :placeholder => 'Search users or your posts.', 
	  :class => 'search_form'%>
	  <%= submit_tag "Search", :class => "btn btn-primary"%>
	<% end %>
</div>
